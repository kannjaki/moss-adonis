<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Moss | {{ contentname }}</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-gray-900">
    <header class="px-16 py-8">
      <div class="bg-gray-700 shadow-sm h-16 rounded">
        <div class="flex px-10">
          <h1 class="text-xl text-white py-4"> <a href="/">Moss</a></h1> <a class="text-xl text-white px-5 py-4">/</a>
          <h2 class="text-base text-white py-5">{{ contentname }}</h2>
        </div>
      </div>
     </header>
  
    
    <div class="grid gap-6 grid-cols-5 px-16 row-gap-16">
      @each(stream in streamlist)
      <div class="bg-gray-900 w-full h-64 overflow-hidden">
      <a href="{{ stream.url }}">
         <div class="h-48 bg-transparent relative">
        <img class="text-center" src="{{ stream.img }}" alt="Poster">
        <div class="flex rounded absolute top-0 left-0">
            <div class="bg-red-600 px-2 w-6 h-6"></div>
            <div class="bg-red-500 text-gray-200 px-2 w-16 h-6 text-center text-base font-medium">{{ stream.views }}</div>
        </div>
         </div>
        <div class="flex">
        @if(stream.platform == "Twitch")
          <div class="bg-gray-200 w-6 h-16 bg-purple-500"></div>
          <div class="w-full h-16 bg-purple-700 px-3 overflow-hidden">
            <div class="block pt-2 truncate ... text-lg text-gray-300">{{ stream.intro }}</div>
            <div class="block truncate ... text-base text-gray-400">{{ stream.name }}</div>
          </div>
        @else
          <div class="bg-gray-200 w-6 h-16 bg-blue-500"></div>
          <div class="w-full h-16 bg-blue-800 px-3 overflow-hidden">
            <div class="block pt-2 truncate ... text-lg text-gray-300">{{ stream.intro }}</div>
            <div class="block truncate ... text-base text-gray-400">{{ stream.name }}</div>
          </div>
        @endif

        </div>
      </a>
      </div>
      @endeach
    </div>
    
  </body>
</html>